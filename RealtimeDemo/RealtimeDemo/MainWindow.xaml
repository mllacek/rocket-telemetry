<Window x:Class="RealtimeDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf" 
        xmlns:pt="clr-namespace:PropertyTools.Wpf;assembly=PropertyTools.Wpf" 
        Title="RealtimeDemo" Height="500" Width="640">
    <DockPanel>
        <StackPanel Orientation="Vertical" Margin="10">
            <StackPanel Orientation="Horizontal">
                <Button Name="btnOpenFile" Command="{Binding ButtonCommand}" Width="100">Choose File</Button>
                <Label>Average:</Label>
                <TextBox Text="{Binding Average, Mode=OneWay, StringFormat={}{0:#,0.00}}" />
            </StackPanel>
            <oxy:PlotView x:Name="plot1" Model="{Binding PlotModel}" Width="600" Height="400"/>
        </StackPanel>
    </DockPanel>
</Window>
