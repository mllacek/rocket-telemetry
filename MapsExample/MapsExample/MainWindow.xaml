<Window x:Class="MapsExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapsExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel Orientation="Vertical" Margin="10">
            <Button Name="btnOpenFile" Command="{Binding SelectFileCommand}" Width="100">Choose File</Button>
            <StackPanel Orientation="Horizontal">
                <Label>Distance to rocket (miles):</Label>
                <TextBox Text="{Binding Distance, Mode=OneWay, StringFormat={}{0:#,0.00}}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>Bearing to rocket (degrees):</Label>
                <TextBox Text="{Binding Bearing, Mode=OneWay, StringFormat={}{0:#,0.00}}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>Last Known Rocket Coordinates (Decimal Degrees):</Label>
                <TextBox Text="{Binding Path=RocketLocation.Lat, Source=CurrentLocation, Mode=OneWay, StringFormat={}{0:#,0.00}}" />
                <TextBox Text="{Binding Path=RocketLocation.Lng, Source=CurrentLocation, Mode=OneWay, StringFormat={}{0:#,0.00}}" />
            </StackPanel>
        </StackPanel>
        <!--TODO: add map-->
    </DockPanel>
</Window>
